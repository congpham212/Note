<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp"
    android:paddingRight="6dp"
    android:paddingLeft="6dp"
    android:paddingTop="3dp"
    android:background="#efefef"
    android:weightSum="20"
    >

    <FrameLayout
        android:id="@+id/fl_1_date_main3_1"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        >

        <CheckBox
            android:layout_gravity="center"
            android:id="@+id/cb_done_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_main3_1"
        android:layout_weight="14.5"
        android:layout_width="10dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_title_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="#2c3e50"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_time_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7f8c8d"
            android:textSize="18sp"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="60dp"
        >

        <ImageButton
            android:id="@+id/ib_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_checkbox_checked"
            android:src="@drawable/ic_on_alarm_24" />
    </FrameLayout>

</LinearLayout>